        If (Instr(strOpSys, "Windows 7") <> 0) then
          If strSPMajorVer >= 0 Then  
              strMessage3 = DisplayMessage(conLABEL_CODE206)
              WScript.echo
              WScript.echo strMessage3
              WScript.echo
              OverwriteSceregvl strWin7SceRegvl
