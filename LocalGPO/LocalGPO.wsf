        CleanupFiles

        strMessage = DisplayMessage(conLABEL_CODE101)
        Wscript.Echo strScePath & strMessage
                     
        strMessage = DisplayMessage(conLABEL_CODE111)
        Wscript.Echo strMessage
        ReRegisterSceCli
         
        strMessage = DisplayMessage(conLABEL_CODE102)
        Wscript.Echo
        Wscript.Echo strMessage
        Wscript.Echo

    End Sub

